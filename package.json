{
  "name": "@thing/ts-monorepo",
  "version": "1.0.0",
  "author": "Alexander Leung",
  "license": "MIT",
  "scripts": {
    "gen:trusted": "del ./dist-safe && copyfiles --up 4 --all ./packages/@isomorphic-typescript/ts-monorepo~/build/**/* ./dist-safe",
    "build:old": "tsc -b --watch --verbose",
    "build:safe": "node ./prep-safe.js && yarn install && node ./dist-safe/ts-monorepo.js",
    "build:rapid": "node ./dist-experiment/ts-monorepo.js",
    "build:lightspeed": "node ./packages/@isomorphic-typescript/ts-monorepo~/build/ts-monorepo.js",
    "patch": "yarn run build:normal && git add . && yarn version patch -fm",
    "minor": "yarn run build:normal && git add . && yarn version minor -fm",
    "major": "yarn run build:normal && git add . && yarn version major -fm",
    "postpatch": "yarn run pub",
    "postminor": "yarn run pub",
    "postmajor": "yarn run pub",
    "pub": "git push origin master && yarn publish",
    "vscode": "yarn add -D @yarnpkg/pnpify && yarn pnpify --sdk && yarn remove @yarnpkg/pnpify"
  },
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "del-cli": "^3.0.0",
    "typescript": "^3.8.3"
  },
  "dependenciesMeta": {
    "@types/node": {
      "unplugged": true
    },
    "@types/webpack": {
      "unplugged": true
    },
    "io-ts": {
      "unplugged": true
    },
    "webpack": {
      "unplugged": true
    }
  },
  "private": true,
  "workspaces": [
    "packages/@isomorphic-typescript/ts-monorepo~"
  ]
}
